---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
// Supports weights 100-900
import "@fontsource-variable/onest";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{Astro.props.title || 'Default Title'}</title>
	</head>
	<body class="min-h-screen w-full bg-slate-950">
	    <div class="relative min-h-screen w-full overflow-x-hidden">
	      <div class="absolute inset-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)] pointer-events-none"></div>
	      <Header />
	      <slot />
	      <Footer />
	    </div>
	</body>
</html>

<style>
	:root {
		color-scheme: light dark;
	}
	html {
		font-family: sistem-ui, sans-serif;
		font-family: "Onest Variable", system-ui, sans-serif;
	}
	html,
	body {
		position: relative
		background-color: #050505;
		display: flex;
		flex-direction: column;
		scroll-behavior: smooth;
			
	}

	@media () {
		html {
			scroll-behavior: auto;
		}

  /* Aseguramos que el fondo no bloquee la interacción */
  .relative > .absolute {
    z-index: -1; /* Envía el fondo al fondo */
  }
</style>
